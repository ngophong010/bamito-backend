{
  "name": "bamito-backend-ecommerce",
  "version": "1.0.0",
  "description": "Modern, professional backend for the BAMITO e-commerce shop.",
  "main": "build/server.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch src --ext ts,json --exec \"node --import tsx/esm ./src/server.ts\"",
    "build": "babel src --out-dir build --copy-files --extensions \".ts,.js\"",
    "start": "cross-env NODE_ENV=production node build/server.js",
    "lint": "eslint .",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed:all": "sequelize-cli db:seed:all",
    "db:populate": "tsx ./scripts/populateDevDb.ts"
  },
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "express": "^4.21.1",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "twilio": "^5.8.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@faker-js/faker": "^9.9.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^6.4.17",
    "@types/validator": "^13.15.2",
    "eslint": "^9.34.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
